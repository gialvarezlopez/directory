{% extends 'app/base.html.twig' %}

{% block body %}
    <h1>Pricing</h1>

    <table>
        <tbody>
            <tr>
                <th>Prid</th>
                <td>{{ pricing.prId }}</td>
            </tr>
            <tr>
                <th>Prplan</th>
                <td>{{ pricing.prPlan }}</td>
            </tr>
            <tr>
                <th>Prmonths</th>
                <td>{{ pricing.prMonths }}</td>
            </tr>
            <tr>
                <th>Prprice</th>
                <td>{{ pricing.prPrice }}</td>
            </tr>
            <tr>
                <th>Prdescription</th>
                <td>{{ pricing.prDescription }}</td>
            </tr>
            <tr>
                <th>Practive</th>
                <td>{% if pricing.prActive %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pricing_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pricing_edit', { 'id': pricing.prId }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
