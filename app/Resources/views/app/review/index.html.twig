{% block codejs %}
    <script>
        //$(document).on("ready", function(){
        $(function () {
            
            setHight();

            $( window ).resize(function(){
                setHight();
            });

            $(window).on('load', function(){
                $("iframe#iframeProfile").contents().find("header").remove();
                $("iframe#iframeProfile").contents().find("footer").remove();
                $("#load").remove();
            });

            function setHight()
            {
                var w = $(".content-wrapper").height();
                var h = $("header").height();
                var f = $("footer").height();
                var t = $(".content-header").height();
                var height = (w - h - f - t - 80 );
                if(height > 0)
                {
                    $(".embed-container").css({"height": height+"px"});
                }
            }

        });
        

    </script>
